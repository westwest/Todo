<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="se.acoder.todo"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="se.acoder.todo.activities.TodoActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.Holo" 
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="se.acoder.todo.activities.AddActivity"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.Holo" 
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name="se.acoder.todo.activities.BaseActivityaseActivity"
            android:label="@string/title_activity_base"
            android:theme="@android:style/Theme.Holo" >
        </activity>
        <activity
    		android:name="se.acoder.todo.activities.StatisticsActivity"
            android:label="@string/app_name" 
            android:theme="@android:style/Theme.Holo" 
            android:screenOrientation="portrait">
        </activity>
    </application>

</manifest>